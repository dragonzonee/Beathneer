<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg11"
    android:orientation="vertical" >

      <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="3000dp"
        android:layout_height="175dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >
        
          <ImageView 
              android:layout_width="140dp" 
              android:layout_height="140dp" 
              android:layout_marginTop="30dp"
              android:layout_marginLeft="30dp"
              android:src="@drawable/user2"
              />
    
    
    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="150dp"
        android:layout_height="175dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView11"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="45dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="33dp"
            android:layout_marginTop="17dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="TextView" />

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:background="@color/lavenderblush"
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView12"
            android:layout_marginRight="17dp"
            android:textSize="16sp"
            android:textColor="@color/grey"
            android:layout_marginTop="17dp"
            android:singleLine="true"
            android:text="实时浓度" />
    </LinearLayout>
    </LinearLayout>
    
      <LinearLayout
        android:id="@+id/LinearLayout03"
        android:layout_width="500dp"
        android:layout_height="175dp"
        android:layout_below="@+id/LinearLayout01"
        android:layout_marginTop="40dp"
        android:orientation="horizontal" >
      
      
      <ImageView 
          android:layout_width="140dp" 
          android:layout_height="140dp" 
          android:layout_marginTop="30dp"
          android:layout_marginLeft="30dp"
          android:src="@drawable/smog_nice"
          />
      
      
      
      <TextView
            android:id="@+id/textView8"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="当前浓度：45ug/m3" />
      
      </LinearLayout>
      
      
      
       <LinearLayout
        android:id="@+id/LinearLayout04"
        android:layout_width="500dp"
        android:layout_height="175dp"
        android:layout_below="@+id/LinearLayout03"
        android:orientation="horizontal" >
      
       <TextView
            android:id="@+id/textView9"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="当前空气质量良好，您可以自由呼吸新鲜空气！   数据由灰尘传感器测得，数值仅作参考，实际以专业单位测量结果为准" />
       
       </LinearLayout>
      
	
</RelativeLayout>