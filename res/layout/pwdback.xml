<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg7"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="80dp"
        android:textColor="@color/white"
        android:text="赵龙  口罩安卓客户端开发" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:textSize="14sp"
        android:text="欢迎使用 Breath PM2.5 穿戴式口罩，本口罩与2015年12月开发完成，历时2个月，历经多个日夜,可以实现灰尘指数的实时监控，谨对对此设备开发做出辛勤努力的三位战友表示感谢 "
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/image_logo2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="30dp"
        android:src="@drawable/sang" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="80dp"
        android:textColor="@color/white"
        android:text="张鑫  口罩电路板设计与组装" />

    <ImageView
        android:id="@+id/image_logo3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/image_logo2"
        android:layout_below="@+id/image_logo2"
        android:layout_marginTop="30dp"
        android:src="@drawable/xin" />

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/image_logo3"
        android:layout_below="@+id/image_logo3"
        android:layout_marginTop="30dp"
        android:src="@drawable/me" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="60dp"
        android:textColor="@color/white"
        android:text="桑宇迪  口罩罩体设计与3D打印" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:text="Just do it, do it well" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_centerHorizontal="true"
        android:text="All Right Reserved By SZZ" />

</RelativeLayout>